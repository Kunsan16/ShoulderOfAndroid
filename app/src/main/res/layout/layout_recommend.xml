<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:downloadProgressButton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_recommend"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="6dp"
    android:layout_marginTop="28dp"
    android:background="@color/orange_progress_loading"
    android:gravity="center|top">


    <ImageView
        android:id="@+id/iv_game_recommend"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"

        tools:src="@tools:sample/avatars" />


    <com.example.administrator.glidetest.view.SuperscriptView
        android:id="@+id/discount_text"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:background="@color/green"
        android:layout_alignEnd="@+id/iv_game_recommend"
        android:textSize="10sp"
        android:gravity="center|top"
        android:text="打着啦"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/tv_game_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_game_recommend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:maxWidth="90dp"
        android:paddingEnd="@dimen/dp_4"
        android:paddingStart="@dimen/dp_4"
        android:textColor="@color/white"
        tools:text="推荐游戏" />


</RelativeLayout>
